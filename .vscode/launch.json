{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[MODULE_1]: Exercise Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/module_1/excercise.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "[MODULE_2]: Flask App",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "module_2/flask_example.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--no-reload", "--port", "5000"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "[PROJECT] Web Scraper",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/project/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/project/.venv/bin/python",
      "cwd": "${workspaceFolder}/project",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/project"
      }
    },
    {
      "name": "[PROJECT] ETL",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/project/src/etl/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/project/.venv/bin/python",
      "cwd": "${workspaceFolder}/project",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/project"
      }
    },
    {
      "name": "[PROJECT] Craw4ai",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/project/src/scraper/crawl4ai_testing.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/project/.venv/bin/python",
      "cwd": "${workspaceFolder}/project",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/project"
      }
    },
    {
      "name": "[PROJECT] FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "project.src.api.server:app",
        "--reload",
        "--port",
        "8000",
        "--host",
        "0.0.0.0"
      ],
      "jinja": true,
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
